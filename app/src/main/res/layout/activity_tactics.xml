<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/volleyball_court_original_resize"
    tools:context="com.example.user1.volleyballmanager20.TacticsActivity">

    <com.example.user1.volleyballmanager20.cmn.DrawingView
        android:id="@+id/drawing"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_undo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/ic_menu_revert" />
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btn_screenshot"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/ic_menu_camera"
        />
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btn_see_all_screenshots"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/ic_menu_gallery"
        />
</RelativeLayout>
